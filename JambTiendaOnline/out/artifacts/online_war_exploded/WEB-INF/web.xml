<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>Controlador</servlet-name>
        <servlet-class>com.tienda.online.controlador.Controlador</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ControladorImg</servlet-name>
        <servlet-class>com.tienda.online.controlador.ControladorImg</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>srvUsuario</servlet-name>
        <servlet-class>com.tienda.online.controlador.srvUsuario</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>srvEmpleado</servlet-name>
        <servlet-class>com.tienda.online.controlador.srvEmpleado</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>srvCliente</servlet-name>
        <servlet-class>com.tienda.online.controlador.srvCliente</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>srvProducto</servlet-name>
        <servlet-class>com.tienda.online.controlador.srvProducto</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Controlador</servlet-name>
        <url-pattern>/Controlador</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ControladorImg</servlet-name>
        <url-pattern>/ControladorImg</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>srvUsuario</servlet-name>
        <url-pattern>/session</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>srvEmpleado</servlet-name>
        <url-pattern>/empleado</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>srvCliente</servlet-name>
        <url-pattern>/srvCliente</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>srvProducto</servlet-name>
        <url-pattern>/srvProducto</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
